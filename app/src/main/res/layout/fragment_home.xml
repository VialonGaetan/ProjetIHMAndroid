<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:background="@color/colorWhiteWhiteGrey">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeTitle"
            android:textSize="27sp"
            android:layout_centerHorizontal="true"
    android:textColor="@color/colorRed"
    android:textAlignment="center"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="230dp"
               android:id="@+id/homeImage"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_below="@+id/homeTitle"/>
    <fragment
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:name="com.polytech.ihm.projetihmandroid.MapsFragment"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/fragment" tools:layout="@layout/fragment_maps"
            android:layout_below="@id/homeImage"/>

</RelativeLayout>